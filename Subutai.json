{
    "name": "${environmentName}",
    "description": "Magento is a flexible eCommerce platfrom",
    "version": "1.1.1",
    "author": "https://github.com/etursunbaev",
    "containers": [
        {
            "hostname": "magento",
            "template": "debian-stretch",
            "peer-criteria": "HTTP-GROUP",
            "size": "${containerSize}",
            "port-mapping": [
                {
                    "protocol": "https",
                    "domain": "${domainName}",
                    "internal-port": "80",
                    "external-port": "443"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "HTTP-GROUP"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/niclash/subutai-bp-magento/archive/master.zip",
        "ansible-playbook": "ansible.yml",
        "extra-vars": [
            {
                "key": "domain_name",
                "value": "${domainName}"
            }, 
            {
                "key": "magento_dbuser_pwd",
                "value": "${magentoAdminpwd}"
            },
            {
                "key": "magento_version",
                "value": "2.3.1"
            },
            {
                "key": "magento_admin_username",
                "value": "${magentoAdmin}"
            },
            {
                "key": "magento_admin_username_pwd",
                "value": "${magentoAdminpwd}"
            },
            {
                "key": "container_hostname",
                "value": "${webContainerName}"
            }
        ],
        "groups": [
            {
                "name": "magento",
                "hostnames": [
                    "magento"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "tbp",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName": {
            "description": "Enter the application domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": ".*"
        },
        "magentoAdmin": {
            "description": "Magento application admin username",
            "type": "string",
            "default": "admin",
            "validation": "[a-zA-Z]+"
        },
        "magentoAdminpwd": {
            "description": "Magento application admin username password, at least 8 characters long. Valid characters are: \"'a-zA-Z0-9_+!@#$%^&*()=- ",
            "type": "string",
            "default": "<MUST change this>",
            "validation": "[:;\"'a-zA-Z0-9_+!@#$%^&*()=-]{8,}"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "MEDIUM",
            "validation": "MEDIUM,LARGE,HUGE"
        }
    }
}